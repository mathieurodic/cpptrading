#!/bin/bash
INPUT_PATH="$1"
OUTPUT_PATH="bin/${INPUT_PATH}"
OUTPUT_PATH="${OUTPUT_PATH%.*}"
OUTPUT_DIR="$(dirname "${OUTPUT_PATH}")"

mkdir -p "${OUTPUT_DIR}"
time g++ -std=c++17 -O2 -Isrc "${INPUT_PATH}" -lpthread -lupscaledb -Wno-narrowing -o "${OUTPUT_PATH}" \
    && echo && time ./${OUTPUT_PATH}
exit $?
